<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd		
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.0.xsd		
	">

	<util:list id="converters">
		<!-- 
			Add your own converters using entries of the following form: 
			<bean class="converters.Class1ToClass2" /> 
		-->
		
		<bean class="converters.AuthorityToStringConverter" />
		<bean class="converters.StringToAuthorityConverter" />
		
		<bean class="converters.ActorToStringConverter" />
		<bean class="converters.StringToActorConverter" />
		
		<bean class="converters.PolyglotToStringConverter" />
		<bean class="converters.StringToPolyglotConverter" />
		
		<bean class="converters.AdministratorToStringConverter" />
		<bean class="converters.StringToAdministratorConverter" />
		
		<bean class="converters.DescriptionToStringConverter" />
		<bean class="converters.StringToDescriptionConverter" />
		
		<bean class="converters.LanguageToStringConverter" />
		<bean class="converters.StringToLanguageConverter" />
		
		<bean class="converters.LanguageExchangeToStringConverter" />
		<bean class="converters.StringToLanguageExchangeConverter" />
		
		<bean class="converters.BannerToStringConverter" />
		<bean class="converters.StringToBannerConverter" />
		
		<bean class="converters.AgentToStringConverter" />
		<bean class="converters.StringToAgentConverter" />
		
		<bean class="converters.SponsorshipToStringConverter" />
		<bean class="converters.StringToSponsorshipConverter" />
		
		<bean class="converters.FolderToStringConverter" />
		<bean class="converters.StringToFolderConverter" />
		
		<bean class="converters.MessageToStringConverter" />
		<bean class="converters.StringToMessageConverter" />
		
		<bean class="converters.LanguageDescriptionToStringConverter" />
		<bean class="converters.StringToLanguageDescriptionConverter" />
		
		<bean class="converters.SponsorshipDescriptionToStringConverter" />
		<bean class="converters.StringToSponsorshipDescriptionConverter" />
	</util:list>
	
</beans>